<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlecture.springweb.dao.NoticeDao">
<resultMap type="com.newlecture.springweb.entity.NoticeView" id="noticeViewMap">
	<result property="memberName" column="member_name" />
</resultMap>	
	<select id="getViewList" resultMap="noticeViewMap">
			select * from noticeview 
			<!-- <where> --> 
			<trim prefix="WHERE" prefixOverrides="AND |OR ">	
			<if test="query != null and query != ''">
			${field} like '%${query}%'
			</if>
			and pub = #{pub}		
			</trim>
			<!-- </where> -->
			order by regdate desc
			limit #{offset}, #{size}	
	</select>
	
	<select id="getCount">
	select count(id) count from notice 
	where ${field} like '%${query}%'
	</select>
	<select id="getView" resultType="com.newlecture.springweb.entity.NoticeView">
	select * from noticeview 
			where id=#{id}
	</select>
	<select id="getNext" resultType="com.newlecture.springweb.entity.Notice" >
	select * from notice
	where regdate &gt; (select regdate from notice where id = #{id}) 
	limit 1;
	</select>
		<select id="getPrev" resultType="com.newlecture.springweb.entity.Notice" >
	select * from notice
	where regdate &lt; (select regdate from notice where id = #{id}) 
	order by regdate desc
	limit 1;
	</select>
	
	<update id="update" parameterType="com.newlecture.springweb.entity.Notice">
		update 
		set
			title = #{title},
			content = #{content},
			hit = #{hit},
			pub = #{pub}
		where id = #{id}
	</update>
	<insert id="insert" parameterType="com.newlecture.springweb.entity.Notice">
 	insert into Notice(title,content,memeberId)
 	values(#{title},#{content},#{memberId})
	</insert>
	<delete id="delete">
		delete from Notice
		where id #{id}
	</delete>
	<delete id="deleteAll">
		delete from Notice
		where id in 
		 <foreach item="id" index="index" collection="ids"
        open="ID in (" separator="," close=")">
          #{id}
    </foreach>;
	</delete>
	<update id="updatePubAll">
	update Notice
	set
		pub = #{pub}
		where id in
		<foreach item="id" index="index" collection="ids"
        open="ID in (" separator="," close=")">
          #{id}
    </foreach>;
	
